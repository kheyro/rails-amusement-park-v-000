<h1>Listing attractions</h1>

<div>
  <%= link_to "New Attraction", new_attraction_path %>
</div>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>

    <% @attractions.each do |a| %>
      <tr>
        <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100"></td>
        <td><%= a.name %></td>
        <td><%= a.tickets %></td>

        <% if is_admin? %>
          <td><%= link_to "Show #{a.name}", attraction_path(a) %></td>
        <% else %>
          <td><%= link_to "Go on #{a.name}", attraction_path(a) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>